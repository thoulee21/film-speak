{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "build:android",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": [
				"eslint: lint",
				"clean: build:android"
			],
			"problemMatcher": [],
			"label": "npm: build:android",
			"detail": "cd android && .\\gradlew assembleRelease"
		},
		{
			"type": "shell",
			"problemMatcher": [],
			"label": "clean: build:android",
			"detail": "rm -rf .\\android\\app\\.cxx",
			"windows": {
				"command": "rm -Recurse -Force .\\android\\app\\.cxx",
			}
		},
		{
			"type": "eslint",
			"problemMatcher": [
				"$eslint-stylish"
			],
			"label": "eslint: lint",
			"detail": "eslint . --ext .js,.jsx,.ts,.tsx",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"type": "npm",
			"script": "test",
			"problemMatcher": [],
			"label": "npm: test",
			"detail": "npx jest --watchAll",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"dependsOn": [
				"eslint: lint"
			],
		}
	]
}